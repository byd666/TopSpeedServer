<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="1dp"
    android:padding="3dp"
    app:cardElevation="3dp">
    <RelativeLayout
        android:id="@+id/recyclerView_item_in"
        android:background="@color/blue_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/recyclerView_item_in_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_200"
            android:scaleType="fitXY"/>

        <TextView
            android:text="@string/item_title"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@color/black"
            android:layout_alignBottom="@+id/recyclerView_item_in_pic"
            android:layout_alignLeft="@+id/recyclerView_item_in_pic"
            android:layout_alignRight="@+id/recyclerView_item_in_pic"
            android:id="@+id/recyclerView_item_in_title" />
    </RelativeLayout>
</android.support.v7.widget.CardView>